<% if user_signed_in? %>
  <% if @item.favorited_by?(current_user) %>
    <%= link_to item_favorites_path(@item), method: :delete, remote: true do %> <!--非同期通信のため｢remote: true｣を追加-->
      <i class="fas fa-heart" style="color: #f21ceb;"> <%= @item.favorites.count %> いいね</i>
    <% end %>
  <% else %>
    <%= link_to item_favorites_path(@item), method: :post, remote: true do %>  <!--非同期通信のため｢remote: true｣を追加-->
      <i class="far fa-heart" style="color: #f21ceb;"> <%= @item.favorites.count %> いいね</i>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-heart" style="color: #f21ceb;"> <%= @item.favorites.count %> いいね</i>
<% end %>