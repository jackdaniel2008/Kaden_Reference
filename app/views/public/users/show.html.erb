<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">マイページ</h3>
    </div>
    <div class="col-md-7"></div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-2">
      <h4>
        <strong>登録情報</strong>
      </h4>
    </div>
    <div class="col-md-8">
      <%= link_to "編集する", users_my_page_edit_path, class: 'btn btn-sm btn-success' %>
    </div>
  </div>

  <div class="row justify-content-center mt-2">
    <div class="col-md-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @user.last_name %> <%= @user.first_name %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= @user.age %>歳</td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= @user.gender_i18n %></td>
          </tr>
          <tr>
            <th>家族構成</th>
            <td><%= @user.family %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4"></div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-md-2">
      <h4>
        <strong>レビュー履歴</strong>
      </h4>
    </div>
    <div class="col-md-8">
      <%= link_to "一覧を見る", class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>