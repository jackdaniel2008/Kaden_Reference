<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="table-secondary text-center">容量やサイズなど一覧</h3>
    </div>
    <div class="col-md-5"></div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>名称</th>
          </tr>
        </thead>
        <tbody>
        <% @sizes.each do |size| %>
          <tr>
            <td>
              <%= link_to size.name, size_path(size.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>