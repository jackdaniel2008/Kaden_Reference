<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
      <div class="table-secondary text-center">
        <strong>コメント投稿</strong>
      </div>
      <% if user_signed_in? %>
        <%= form_with model: [@item, @review, @comment] do |f| %>
          <div>
            <%= f.text_area :body %>
          </div>
          <div>
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
      <% else %>
        <div class="table-bordered">会員登録することで</br>コメントの投稿をす</br>ることができます。</div>
      <% end %>
    </div>

    <div class="col-md-8">
      <table class="mb-3">
        <tbody>
          <tr>
            <th class="col-md-2 table-secondary text-center mb-3">
              レビュー詳細
            </th>
            <td class="col-md-8">
              <%= link_to "商品詳細に戻る", item_path(@item.id), class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        </tbody>
      </table>
      <p class="ml-3 mb-0"><%= @review.created_at.strftime('%Y/%m/%d') %></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-md-2">
              <%= @review.user.user_name %></br>
              <%= @review.user.age %>歳 <%= @review.user.gender_i18n %> <%= @review.user.family %>
            </td>
            <td class="col-md-6">
              <%= @review.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="col-md-3 table-secondary text-center mb-3">
        <strong>コメント一覧</strong> (<%= @review.comments.count %>件)
      </div>
      <% @review.comments.each do |comment| %>
        <p class="ml-3 mb-0"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="col-md-2">
                <%= comment.user.user_name %></br>
                <%= comment.user.age %>歳 <%= comment.user.gender_i18n %> <%= comment.user.family %>
              </td>
              <td class="col-md-6">
                <%= comment.body %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>