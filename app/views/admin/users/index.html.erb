<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <h3 class="table-secondary text-center">会員一覧</h3>
    </div>
    <div class="col-md-8"></div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.last_name %><%= user.first_name %>
              <% end %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <% if user.is_deleted == false %>
                <p class="text-success mb-0"><%= "有効" %></p>
              <% else %>
                <p class="text-danger mb-0"><%= "退会" %></p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
<div>
  <%= paginate @users %>
</div>