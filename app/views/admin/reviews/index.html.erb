<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">レビュー履歴一覧</h3>
    </div>
    <div class="col-md-9">
      <%= link_to "会員詳細へ戻る", admin_user_path(@user.id), class: 'btn btn-sm btn-primary' %>
    </div>
  </div>

  <div class="row justify-content-center mt-3 ml-3">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th class="col-md-2 text-center table-bordered table-secondary">投稿日時</th>
            <th class="col-md-2 text-center table-bordered table-secondary">商品名</th>
            <th class="col-md-2 text-center table-bordered table-secondary">いいね・コメント</th>
            <th class="col-md-5 text-center table-bordered table-secondary">投稿内容</th>
            <th class="col-md-1"></th>
          </tr>
        </thead>
      <% @reviews.each do |review| %>
        <tbody>
          <tr>
            <td class="text-center table-bordered">
              <%= review.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td class="text-center table-bordered">
              <%= review.item.name %>
            </td>
            <td class="text-center table-bordered">
              <i class="far fa-heart" style="color: #f21ceb;"></i><%= review.r_favorites.count %>件　<i class="far fa-comment" style="color: #3cb4d3;"></i><%= review.comments.count %>件
            </td>
            <td class="pl-1 table-bordered">
              <%= review.body %>
            </td>
            <td class="pl-1">
              <%= link_to "削除する", admin_review_path(review.id), method: :delete, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>