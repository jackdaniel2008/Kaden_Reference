<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="table-secondary text-center">容量やサイズなど名称一覧</h3>
    </div>
    <div class="col-md-5"></div>
  </div>

  <%= form_with model: @size, url:admin_sizes_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-9">
      <% if @size.errors.any? %>
        <font color="red">※未入力です。入力してから再度登録ボタンを押下してください。</font>
      <% end %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>容量やサイズなど名称</th>
            <td>
              <%= f.text_field :name %>
            </td>
            <td>
              <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>ID</th>
            <th>名称</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @sizes.each do |size| %>
          <tr>
            <td>
              <%= size.id %>
            </td>
            <td>
              <%= link_to size.name, admin_size_path(size.id) %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_size_path(size.id), class: 'btn btn-sm btn-success' %>
              <%= link_to "削除する", admin_size_path(size.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>