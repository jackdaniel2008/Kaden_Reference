<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">コメント履歴一覧</h3>
    </div>
    <div class="col-md-9"></div>
  </div>

  <div class="row justify-content-center mt-3 ml-3">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th class="col-md-2 text-center table-bordered table-secondary">投稿日時</th>
            <th class="col-md-2 text-center table-bordered table-secondary">商品名</th>
            <th class="col-md-2 text-center table-bordered table-secondary">レビュアー</th>
            <th class="col-md-5 text-center table-bordered table-secondary">投稿内容</th>
            <th class="col-md-1"></th>
          </tr>
        </thead>
      <% @comments.each do |comment| %>
        <tbody>
          <tr>
            <td class="text-center table-bordered">
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td class="text-center table-bordered">
              <%= comment.review.item.name %>
            </td>
            <td class="text-center table-bordered">
              <%= comment.review.user.user_name %>
            </td>
            <td class="pl-1 table-bordered">
              <%= comment.body %>
            </td>
            <td class="pl-1">
              <%= link_to "削除する", admin_comment_path(comment.id), method: :delete, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>