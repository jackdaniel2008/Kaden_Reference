<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">商品新規登録</h3>
    </div>
    <div class="col-md-7"></div>
  </div>

  <%= form_with model: @genre, url:admin_genres_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>ジャンル名</th>
            <td>
              <%= f.text_field :name, placeholder:"ジャンル名" %>
            </td>
            <td>
              <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>ジャンルID</th>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.id %>
            </td>
            <td>
              <%= link_to admin_genre_path(genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
              <%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>