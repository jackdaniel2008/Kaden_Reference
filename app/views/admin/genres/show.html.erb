<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h3 class="table-secondary text-center"><strong><%= @genre.name %></strong> 一覧・登録</h3>
    </div>
    <div class="col-md-6"></div>
  </div>

  <%= form_with model: @category, url:admin_categories_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>カテゴリー名</th>
            <td>
              <%= f.text_field :name, placeholder:"カテゴリー名" %>
            </td>
            <td>
              <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>カテゴリーID</th>
            <th>カテゴリー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= category.id %>
            </td>
            <td>
              <%= category.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_category_path(category.id), class: 'btn btn-sm btn-success' %>
              <%= link_to "削除する", admin_category_path(category.id), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>