<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <h3 class="table-secondary text-center">家電一覧</h3>
    </div>
    <div class="col-md-7"></div>
    <div class="col-md-1 text-center">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-lg"></i>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>種別</th>
            <th>容量やサイズなど</th>
            <th>適正人数</th>
            <th>メーカー</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <% item.genres.each do |genre| %>
                <%= genre.name %>
              <% end %>
            </td>
            <td>
              <% item.sizes.each do |size| %>
                <%= size.name %>
              <% end %>
            </td>
            <td>
              <% item.peoples.each do |people| %>
                <%= people.name %>
              <% end %>
            </td>
            <td>
              <% item.makers.each do |maker| %>
                <%= maker.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div>
    <%= paginate @items %>
  </div>
</div>
