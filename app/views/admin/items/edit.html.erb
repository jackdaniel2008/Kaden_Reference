<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <h3 class="table-secondary text-center">商品編集</h3>
    </div>
    <div class="col-md-8"></div>
  </div>

  <%= form_with model: @item, url:admin_item_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品画像</th>
            <td>
              <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <th>商品名</th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td>
              <%= f.text_area :introduction %>
            </td>
          </tr>
          <tr>
            <th>種別</th>
            <td>
              <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>容量やサイズなど</th>
            <td>
              <%= f.collection_check_boxes :size_ids, Size.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>適正人数</th>
            <td>
              <%= f.collection_check_boxes :people_ids, People.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>メーカー</th>
            <td>
              <%= f.collection_check_boxes :maker_ids, Maker.all, :id, :name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-3"></div>
    <div class="col-md-7">
      <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
</div>
