<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">商品新規登録</h3>
    </div>
    <div class="col-md-9"></div>
  </div>

  <%= form_with model: @item, url:admin_items_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-10">
      <% if @item.errors.any? %>
        <font color="red">※未入力の項目があります。全て埋めてから再度登録ボタンを押下してください。</font>
      <% end %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="w-25 p-3">商品画像</th>
            <td>
              <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <th>商品名</th>
            <td>
              <%= f.text_field :name, placeholder:"商品名", size: "30x1" %>
            </td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td>
              <%= f.text_area :introduction, placeholder:"ここに説明文を記述", size: "80x4" %>
            </td>
          </tr>
          <tr>
            <th>種別</th>
            <td>
              <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>容量やサイズなど</th>
            <td>
              <%= f.collection_check_boxes :size_ids, Size.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>適正人数</th>
            <td>
              <%= f.collection_check_boxes :people_ids, People.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>メーカー</th>
            <td>
              <%= f.collection_check_boxes :maker_ids, Maker.all, :id, :name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
</div>