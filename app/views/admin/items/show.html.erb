<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <h3 class="table-secondary text-center">商品詳細</h3>
    </div>
    <div class="col-md-8"></div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "300x300" %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>種別</th>
            <td>
              <% @item.genres.each do |genre| %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>容量やサイズなど</th>
            <td>
              <% @item.sizes.each do |size| %>
                <%= size.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>適正人数</th>
            <td>
              <% @item.peoples.each do |people| %>
                <%= people.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>メーカー</th>
            <td>
              <% @item.makers.each do |maker| %>
                <%= maker.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-5"></div>
    <div class="col-md-2">
        <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-sm btn-success' %>
    </div>
    <div class="col-md-2">
        <%= link_to "削除する", admin_item_path(@item.id), method: :delete, class: "btn btn-sm btn-danger" %>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>